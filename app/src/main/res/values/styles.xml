<resources>

    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="RecyclerView.Linear">
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbars">vertical</item>
        <item name="layoutManager">android.support.v7.widget.LinearLayoutManager</item>
    </style>

    <style name="GroupingItemDecoration.Label" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_black_opacity_87</item>
        <item name="android:background">@color/labelColor</item>
        <item name="android:paddingTop">@dimen/spacing_x0.25</item>
        <item name="android:paddingBottom">@dimen/spacing_x0.25</item>
        <item name="android:paddingLeft">@dimen/spacing_x2</item>
        <item name="android:paddingRight">@dimen/spacing_x2</item>
    </style>

</resources>
